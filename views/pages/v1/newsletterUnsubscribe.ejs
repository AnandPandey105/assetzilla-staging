<!doctype html>
<html lang="en">
    <%- include ./partials/header.ejs%>

    <body>
        <%- include ./partials/navigation.ejs%>
        <div>
            <div class="d-flex flex-column justify-content-center align-items-center w-100 p-5" style="min-height: 50vh;">
                <h1>Newsletter</h1>
                <% if (response.error) {%>
                    <p><%=response.message%></p>
                <%}%>
                <% if (response.success) {%>
                    <h5 class="mb-0">You were successfully unsubscribed from our Newsletter</p>
                    <p class="text-center"><%=response.email%></p>
                    <p class="text-center text-muted">Redirecting you to our news page in <span id="seconds">5</span></p>
                <%}%>
            </div>
        </div>
        <%- include ./partials/footer.ejs%>
        <script>
            let count = 5
            setTimeout(()=>{
                window.open("/news", "_self")
            }, 5000);
            setInterval(()=>{
                count--;
                document.getElementById('seconds').innerText = count;
            },1000)
        </script>
    </body>
</html>
