<!DOCTYPE html>
<html>
    
<head>
    <title><%=data.heading%> | Assetzilla</title>
    <meta name="title" content="<%=data.heading%> | Assetzilla">
    <meta name="description" content="<%= data.content.substring(0, 200) %>">
</head>

<%- include ../partials/head.ejs%>

<body>
    <%- include ../partials/navigation_bar.ejs%>
<div class="top-margin container">
    <div class="news-container row">
        <div class="col-md-9">
            <h1 class="mt-3 mb-2"><%=data.heading%></h1>
            <p  class="mb-3">
                <% if (data.publish_date){ %>
                    Published on <%=data.publish_date%> |
                <%}%>
                <!-- <%=data.updated.date%> <%=data.updated.month%> <%=data.updated.year%> |  -->
                <% for(var j=0; j < data.tags.length; j++) { %>
                <a href="/news/tags/<%=data.tags[j]%>">
                    <%=data.tags[j]%>
                </a>,
                <%}%>                    
            </p>
            
            <% if (data.video && data.video.length > 0){ %>
                <!-- <%=data.video%> -->
                <iframe width="100%" height="315" src="<%=data.video%>" frameborder="0" allowfullscreen></iframe>
            <%} else {%>
                <% if (data.images && data.images.length > 0){ %>
                    <div>
                        <img src="https://s3-application.s3-us-west-2.amazonaws.com/dyn-res/news/<%=data.images%>" class="card-img-top cursor">
                    </div>
                <%}%>
            <% } %>

            

            
            
            <div class="mt-4">
                <%-data.content %>
            </div>
        </div>
        <div class="col-md-3">
        <div class="top-margin">
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Seach..." aria-label="Recipient's username"
                    aria-describedby="button-addon2" id="news_search">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button" onclick="news_search()">Search</button>
                </div>
            </div>
            <!-- LATEST POST -->
            <h5>Latest Post</h5>
            <hr>
            <% for(var i=0; i < recent_blog.length; i++) { %>
            <div class="d-flex flex-column bd-highlight mb-3" onclick="go_to_page('<%=recent_blog[i].url %>')">
                <div class="p-2 bd-highlight">
                    <img src="<%=recent_blog[i].news_banner%>" class="w-100">
                </div>
                <div class="p-2 bd-highlight">
                    <p class="card-text"><small class="text-muted">Last <%=recent_blog[i].updated.date%>
                            <%=recent_blog[i].updated.month%>. <%=recent_blog[i].updated.year%></small>
                    </p>
                    <p class="card-text"><%=recent_blog[i].heading%></p>
                </div>
            </div>
            <%}%>
                        
                        <!-- CATEGORIES -->
                        <!-- <h5>Latest Post</h5>
                        <hr>
                        <ul>
                            <li><strong>Properties</strong><span class="float-right">(12)</span></li>
                            <li><strong>Projects</strong><span class="float-right">(7)</span></li>
                            <li><strong>Builders</strong><span class="float-right">(10)</span></li>
                            <li><strong>Locations</strong><span class="float-right">(4)</span></li>
                        </ul> -->
                        <!-- POPULAR TAGS -->
                        <h5>Popular Tags</h5>
                        <hr>
                        <% for(var j=0; j < popular_tags.length; j++) { %>
            <a href="/news/tags/<%=popular_tags[j].key%>">
                <span class="badge badge-pill sidebar-tags-pill"><%=popular_tags[j].key%>(<%=popular_tags[j].doc_count%>)</span>
            </a>
            <%}%>
            </div>
        </div>
    </div>
</div>
<%- include ../partials/footer.ejs%>
</body>

</html>